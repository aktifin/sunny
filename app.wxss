/* Text ellipsis */
.truncate {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* Opacity utilities */
.opacity-50 {
  opacity: 0.5;
}

.opacity-95 {
  opacity: 0.95;
}

/* Cursor utilities */
.cursor-not-allowed {
  cursor: not-allowed;
}

.pointer-events-none {
