}

.h-12 {
  height: 96rpx;
}

.h-6 {
  height: 48rpx;
}

.h-3 {
  height: 24rpx;
}

/* 字体类 */
.font-bold {
  font-weight: 700;
}

.font-medium {
  font-weight: 500;
}

.text-xl {
  font-size: 20px;
}

.text-lg {
